<div class="container">
  <h1 class="text-center my-5">Restaurant Lists</h1>
  <%= link_to "Add a new restaurant", new_restaurant_path(@restaurant) %>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.category %></h6>
            <p class="card-text">📞<%= restaurant.phone_number %></p>
            <p class="card-text">🏡<%= restaurant.address %></p>
            <%= link_to "Review the restaurant",  restaurant_path(restaurant) %>
          </div>
      </div>
    <% end %>
  </div>

  </div>
</div>
